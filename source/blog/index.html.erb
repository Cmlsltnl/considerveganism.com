---
pageable: true
per_page: 10
layout: blog_layout
---
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<% if page_articles.length > 0 %>
  <% page_articles.each_with_index do |article, i| %>
    <%= partial('blog/article', :locals => { :article => article }) %>
  <% end %>
<% else %>
  <p><%= partial 'blog/noposts' %></p>
<% end %>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>

<% content_for :footer do %>
  <%= link_to "&laquo; Home", "/", :class => "footer-link footer-link-big" %>
<% end %>